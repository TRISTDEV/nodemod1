<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                          http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
      id="h3270" version="1.0">

  <portlet id="H3270Portlet">
    <description>H3270 Portlet</description>
    <portlet-name>H3270Portlet</portlet-name>
    <display-name>H3270 Portlet</display-name>
    <portlet-class>org.h3270.web.Portlet</portlet-class>
    <expiration-cache>1</expiration-cache>

    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>view</portlet-mode>
      <portlet-mode>edit</portlet-mode>
    </supports>

    <portlet-info>
      <title>h3270 Portlet</title>
      <short-title>h3270</short-title>
    </portlet-info>

    <portlet-preferences>
      <preference>
        <name>target-host</name>
        <value></value>
      </preference>
      <preference>
        <name>auto-connect</name>
        <value>false</value>
      </preference>
      <preference>
        <name>color-scheme</name>
        <value>White Background</value>
      </preference>
      <preference>
        <name>font</name>
        <value>couriernew</value>
      </preference>
    </portlet-preferences>

  </portlet>

</portlet-app>
